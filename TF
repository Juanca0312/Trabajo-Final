#include <iostream>
#include <conio.h>
#include <windows.h>
#include <string>

using namespace std;
using namespace System;

void ShowConsoleCursor(bool show)
{
	HANDLE out = GetStdHandle(STD_OUTPUT_HANDLE);

	CONSOLE_CURSOR_INFO     cursorInfo;

	GetConsoleCursorInfo(out, &cursorInfo);

	cursorInfo.bVisible = show;

	SetConsoleCursorInfo(out, &cursorInfo);
}

void gotoxy(int x, int y) {

	HANDLE ventana;
	ventana = GetStdHandle(STD_OUTPUT_HANDLE);

	COORD punto;

	punto.X = x;

	punto.Y = y;

	SetConsoleCursorPosition(ventana, punto);
}

void color(int x) {

	HANDLE color = GetStdHandle(STD_OUTPUT_HANDLE);

	SetConsoleTextAttribute(color, x);

}

void Titulo() {

	gotoxy(80, 5);
	cout << "FROGGER " << endl;
	gotoxy(80, 6);
	cout << "Por: " << endl;
	gotoxy(80, 7);
	cout << "Juan Carlos Hernandez" << endl,
		gotoxy(80, 8);
	cout << "Rodrigo Ramirez";
	gotoxy(80, 12);
	cout << "CONTROLES: ";
	gotoxy(80, 14);
	cout << " 'w' = Arriba ";
	gotoxy(80, 15);
	cout << " 's' = Abajo ";
	gotoxy(80, 16);
	cout << " 'a' = Izquierda ";
	gotoxy(80, 17);
	cout << " 'd' = Derecha ";
	gotoxy(80, 20);
	cout << "Presione 'x' para Salir";

}

void Frog(int x1, int y1) {


	Console::SetCursorPosition(x1, y1);
	Console::BackgroundColor = ConsoleColor::Green;
	gotoxy(x1, y1); cout << "o/\\o";
	gotoxy(x1 - 1, y1 + 1); cout << "-|  |-";
	gotoxy(x1, y1 + 2); cout << "/~";
	gotoxy(x1 + 2, y1 + 2); cout << "~\\";
}

